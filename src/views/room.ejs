<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/styles/global.css">
  <link rel="stylesheet" href="/styles/room.css">
  <link rel="stylesheet" href="/styles/modal.css">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@400;500;700&display=swap"
    rel="stylesheet">

  <script defer type="module" src="/scripts/main.js"></script>

  <title>Rocket.Q - Perguntas e Respostas</title>
</head>

<body>
  <div id="room" class="content">
    <header>
      <a href="/">
        <img src="/images/logo.svg" alt="Rocket.Q Logo" />
      </a>

      <div class="buttons">
        <div class="button outlined" id="room-id" data-id="<%= roomId %>">
          #<%= roomId %>
            <img src="/images/icon-copy.svg" alt="Copiar código da sala" />
        </div>
        <a href="/create-pass" class="button">
          <img src="/images/icon-users-w.svg" alt="Criar nova sala" />
          Criar Sala
        </a>
      </div>
    </header>

    <main>
      <section id="question-form">
        <h2>Faça sua pergunta</h2>
        <form action="/question/create/<%= roomId %>" method="POST">
          <label class="sr-only" for="question">O que você quer perguntar?</label>
          <textarea id="question" name="question" placeholder="O que você quer perguntar?"></textarea>

          <footer>
            <div>
              <img src="/images/icon-lock.svg" alt="Essa pergunta é anônima">
              Esta pergunta é anônima
            </div>
            <button>Enviar</button>
          </footer>
        </form>
      </section>

      <section id="questions">
        <h2 class="sr-only">Perguntas da comunidade</h2>

        <div class="questions">

          <% if(isNoQuestions) { %>
            <%- include('parts/noquestion' )%>
              <% } %>

                <% questions.forEach(question=> { %>
                  <div class="question-wrapper">
                    <div class="question-content">
                      <div class="user">
                        <img src="/images/icon-user-no-bg.svg" alt="Avatar">
                      </div>
                      <div class="question">
                        <p>
                          <%= question.title %>
                        </p>
                      </div>
                    </div>

                    <div class="actions">
                      <a href="#" class="check" data-id="<%= question.id %>">
                        <img src="/images/icon-check.svg" alt="Marcar como lida">
                        Marcar como lida
                      </a>
                      <a href="#" class="delete" data-id="<%= question.id %>">
                        <img src="/images/icon-trash.svg" alt="Excluir pergunta">
                        Excluir
                      </a>
                    </div>
                  </div>
                  <% }); %>

                    <% questionsRead.forEach(questionRead=> {%>
                      <div class="question-wrapper read">
                        <div class="question-content">
                          <div class="user">
                            <img src="/images/icon-user-no-bg.svg" alt="Avatar" />
                          </div>
                          <div class="question">
                            <p>
                              <%= questionRead.title %>
                            </p>
                          </div>
                        </div>

                        <div class="actions">
                          <a href="#" class="delete" data-id="<%= questionRead.id %>">
                            <img src="/images/icon-trash.svg" alt="Excluir pergunta" />
                            Excluir
                          </a>
                        </div>
                      </div>
                      <% }) %>
        </div>
      </section>
    </main>
  </div>

  <div class="modal-wrapper">
    <div class="modal">
      <h2></h2>
      <p></p>

      <form action="#" method="POST">
        <label for="password" class="sr-only">Digite sua senha</label>
        <input type="password" name="password" id="password" placeholder="Digite sua senha" />

        <div class="buttons">
          <div class="button grey cancel">Cancelar</div>
          <button class=""></button>
        </div>
      </form>
    </div>
  </div>
</body>

</html>
